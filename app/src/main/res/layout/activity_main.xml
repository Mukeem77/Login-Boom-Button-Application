<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_background"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Sign In"
        android:textColor="#ffffff"
        android:textSize="60dp"
        android:textStyle="bold"
        android:layout_marginVertical="23dp"
        android:layout_marginLeft="90dp">

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<EditText
    android:layout_width="290dp"
    android:layout_height="60dp"
    android:layout_marginLeft="30dp"
    android:layout_marginVertical="180dp"
    android:hint="Login"
    android:background="@drawable/login_bg"
    android:maxLength="15"
    android:inputType="text"
    android:textSize="20dp"/>

    <EditText
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginVertical="290dp"
        android:hint="Password"
        android:background="@drawable/login_bg"
        android:layout_marginLeft="-288dp"
        android:inputType="textPassword"
        android:maxLength="15"
        android:textSize="20dp"/>

        <com.spark.submitbutton.SubmitButton
            android:id="@+id/button_signin"
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:layout_marginLeft="-287dp"
            android:layout_marginTop="400dp"
            android:text="SIGN IN"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:sub_btn_duration="1000"
            app:sub_btn_ripple_color="@color/colorPrimary"
            app:sub_btn_tick_color="@color/white" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin_right"
        android:layout_marginBottom="180dp"
        android:elevation="6dp"
        android:src="@drawable/ic_action_fb"
        android:visibility="invisible"
        android:backgroundTint="@color/fab1_color"
        app:pressedTranslationZ="12dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin_right"
        android:layout_marginBottom="100dp"
        android:elevation="6dp"
        android:visibility="invisible"
        android:src="@drawable/ic_action_twitter"
        android:backgroundTint="@color/fab2_color"
        app:pressedTranslationZ="12dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin_right"
        android:layout_marginBottom="16dp"
        android:elevation="6dp"
        android:background="@drawable/color_background"
        android:src="@drawable/ic_action_plus"
        app:pressedTranslationZ="12dp" />

</android.support.design.widget.CoordinatorLayout>